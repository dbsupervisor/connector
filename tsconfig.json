{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": [
    "scripts/**/*",
    "src/**/*",
    "bin/**/*",
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
